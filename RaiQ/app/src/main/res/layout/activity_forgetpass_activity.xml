<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/forgetpass_back"
    tools:context=".forgetpass_activity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/forgetpass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Введите email на который зарегистрирован ваш \n аккуант"
            android:gravity="center"
            android:textColor="@color/forgepass_header"
            android:textSize="25dp"/>

        <RelativeLayout
            android:id="@+id/forgetpass_mail_contain"
            android:layout_below="@id/forgetpass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">

            <EditText
                android:id="@+id/forgetpass_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="18sp"
                android:background="@drawable/button_round_corner"
                android:padding="20dp"
                android:layout_marginHorizontal="20dp"
                android:text=""
                android:textColor="@color/auth_text_color"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@color/forgetpass_back"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginTop="-4dp"
                android:paddingRight="10dp"
                android:textSize="18sp"
                android:text="Почта"
                android:textColor="@color/auth_text_color"/>

        </RelativeLayout>

        <Button
            android:id="@+id/forgetpass_send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgetpass_mail_contain"
            android:background="@drawable/create_acc_button"
            android:layout_marginHorizontal="55dp"
            android:text="Отправить"
            android:layout_marginTop="60dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/auth_voity_textcolor"/>

        <Button
            android:id="@+id/forgetpass_gotoauth"
            android:layout_below="@id/forgetpass_send_email"
            android:background="@drawable/auth_like_partner"
            android:layout_width="match_parent"
            android:text="Вернуться к авторизации"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="38dp"
            android:textColor="@color/forgetpass_buttonBack_textColor"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>