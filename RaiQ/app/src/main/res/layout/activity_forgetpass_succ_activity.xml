<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/forgetpass_back"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".forgetpass_succ_activity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forgetpass_succ_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Письмо с инструкцией по восстановлению пароля отправлено вам на почту"
            android:gravity="center"
            android:textColor="@color/forgepass_header"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/forgetpass_succ_gotoauth"
            android:layout_below="@id/forgetpass_succ_label"
            android:background="@drawable/auth_like_partner"
            android:layout_width="match_parent"
            android:text="Вернуться к авторизации"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="38dp"
            android:textColor="@color/forgetpass_buttonBack_textColor"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>