<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/history_item_background"
    android:weightSum="100"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/history_item_monument_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название памятника"
                    android:textSize="18sp"
                    android:padding="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/history_item_textcolor_name"/>

                <TextView
                    android:id="@+id/history_item_monument_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Адрес"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="17dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/history_item_textcolor_address"
                    android:textSize="15sp"
                    android:layout_below="@id/history_item_monument_name"/>

            </RelativeLayout>

    </LinearLayout>
</LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>